<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="sub_tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/moon</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/unselectedTabColor</item>
    </style>

    <style name="MyTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
    </style>
    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:width">40dp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/moon</item>
    </style>

    <style name="buttonStyle.primary">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/primary_button</item>
    </style>

    <style name="buttonStyle.secondary">
        <item name="android:textColor">@color/primaryButton</item>
        <item name="android:background">@drawable/secondary_button</item>
    </style>
    
    <style name="bodyText">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="headerText">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
